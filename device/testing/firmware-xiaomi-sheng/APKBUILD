	30-dsp-firmware.files
"
builddir="$srcdir/xiaomi-sheng-firmware-$_commit"

package() {
	# parent package is empty
	mkdir -p "$pkgdir"
	install -Dm644 "$builddir"/* -t \
		"$subpkgdir/lib/firmware/"
}

