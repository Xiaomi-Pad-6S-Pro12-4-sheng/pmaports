pkgname=soc-unisoc-ums9230
pkgdesc="Common package for Unisoc UMS9230 devices"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="BSD-3-Clause"
arch="aarch64"
options="!check !archcheck !tracedeps"
depends="rpmsgexport unisoc-nvitem-daemon unisoc-timesync-daemon"
source="
	70-rpmsg.rules
	99-sprd-watchdog.rules
"

package() {
	mkdir -p "$pkgdir"

	install -Dm644 "$srcdir"/70-rpmsg.rules \
		-t "$pkgdir"/usr/lib/udev/rules.d
	install -Dm644 "$srcdir"/99-sprd-watchdog.rules \
		-t "$pkgdir"/usr/lib/udev/rules.d
}

