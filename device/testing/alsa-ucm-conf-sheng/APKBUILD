# Maintainer: Fauzan Amir <alghiffaryfa19@gmail.com>
pkgname=alsa-ucm-conf-sheng
pkgver=1
pkgrel=1
pkgdesc="ALSA UCM configuration for Sheng"
url="https://postmarketos.org"
arch="aarch64"
license="BSD-3-Clause"
provides="alsa-ucm-conf"
provider_priority=1
_commit="master"
source="https://github.com/map220v/alsa-ucm-conf.git"
options="!check"
builddir="$srcdir/$pkgname-$_commit"

package() {
	# install audio config files
	mkdir -p "$pkgdir"/usr/share/alsa
	cp -r "$srcdir/alsa-ucm-conf"/ucm2 \
		"$pkgdir"/usr/share/alsa/
}