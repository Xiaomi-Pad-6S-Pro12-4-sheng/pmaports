# Maintainer: Fauzan Amir <alghiffaryfa19@gmail.com>
pkgname=alsa-ucm-conf-sheng
pkgver=1
pkgrel=1
pkgdesc="ALSA UCM configuration for Sheng"
url="https://postmarketos.org"
arch="aarch64"
license="BSD-3-Clause"
provides="alsa-ucm-conf"
provider_priority=1
source="master.tar.gz::https://github.com/map220v/alsa-ucm-conf/archive/refs/heads/master.tar.gz"
options="!check"
builddir="$srcdir/alsa-ucm-conf-master"

package() {
	# install audio config files
	mkdir -p "$pkgdir"/usr/share/alsa/ucm2
	cp -r "$builddir"/ucm2/* "$pkgdir/usr/share/alsa/ucm2/"
}
