# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Fauzan Amir <alghiffaryfa19@gmail.com>
pkgname=device-xiaomi-sheng
pkgdesc="Xiaomi Pad 6s Pro"
pkgver=6
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="
	!check
	!archcheck
	!strip
	"
depends="
	alsa-ucm-conf
	firmware-xiaomi-sheng
	linux-postmarketos-qcom-sm8550
	make-dynpart-mappings
	mesa-vulkan-freedreno
	mkbootimg
	msm-modem
	postmarketos-base
	qbootctl
	swclock-offset
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	30-gpu-firmware.files
"

subpackages="
	$pkgname-openrc
"

build() {
	devicepkg_build	$startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install	-Dm644 "$srcdir"/HiFi.conf -t \
		"$pkgdir"/usr/share/alsa/ucm2/Xiaomi/sheng

	install	-Dm644 "$srcdir/Xiaomi-Pad6SPro.conf" -t \
		"$pkgdir"/usr/share/alsa/ucm2/Xiaomi/sheng

	install	-Dm644 "$srcdir/XiaomiPad6SPro.conf" \
		"$pkgdir/usr/share/alsa/ucm2/conf.d/sm8550/Xiaomi-Pad6SPro.conf"

	install	-Dm644 "$srcdir/SM8550-HDK.conf" -t \
		"$pkgdir"/usr/share/alsa/ucm2/conf.d/sm8550

	install -Dm64 "$srcdir"/30-gpu-firmware.files -t \
		"$pkgdir"/usr/share/mkinitfs/files

}

openrc() {
	install_if="$pkgname=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install"
	depends="
		qbootctl-openrc
		"
	mkdir -p "$subpkgdir"
}
